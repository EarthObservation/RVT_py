 year = {2018},
 title = {Downscaling solar irradiance using DEM-based model in young volcanic islands with rugged topography},
 url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85047501513&doi=10.1016%2fj.renene.2018.03.071&partnerID=40&md5=7ae87804c6ae7c1868b392d366c139ce},
